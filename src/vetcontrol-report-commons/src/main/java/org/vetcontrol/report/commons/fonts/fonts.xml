<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="dejaVuSerifFamily" class="net.sf.jasperreports.engine.fonts.SimpleFontFamily">
		<property name="name" value="DejaVuSerif"/>
		<property name="normal" value="org/vetcontrol/report/commons/fonts/DejaVuSerif.ttf"/>
		<property name="bold" value="org/vetcontrol/report/commons/fonts/DejaVuSerif-Bold.ttf"/>
		<property name="pdfEncoding" value="Cp1251"/>
		<property name="pdfEmbedded" value="true"/>
	</bean>

</beans>

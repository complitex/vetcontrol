<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">


    <context-param>
        <param-name>configuration</param-name>
        <param-value>development</param-value>
    </context-param>

    <filter>
        <filter-name>wicket</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>org.vetcontrol.web.VetcontrolWebApplication</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>wicket</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <security-role>
        <role-name>AUTHORIZED</role-name>
    </security-role>
    <security-role>
        <role-name>USER_EDIT</role-name>
    </security-role>
    <security-role>
        <role-name>INFORMATION_EDIT</role-name>
    </security-role>
    <security-role>
        <role-name>INFORMATION_VIEW</role-name>
    </security-role>
    <security-role>
        <role-name>DOCUMENT_CREATE</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>VetcontrolRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.html</form-login-page>
            <form-error-page>/login_error.html</form-error-page>
        </form-login-config>
    </login-config>

</web-app>

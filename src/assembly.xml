<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
    <id>vetcontrol-client</id>
    <formats>
        <format>dir</format>
    </formats>
    <files>
        <file>
            <source>
                vetcontrol-client/src/main/resources/logging.properties
            </source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>

    <moduleSets>
        <moduleSet>
            <includes>
                <include>org.vetcontrol:vetcontrol-web-client</include>
            </includes>
            <binaries>
                <unpack>true</unpack>
                <outputDirectory>client</outputDirectory>
                <outputFileNameMapping>vetcontrol-client.war</outputFileNameMapping>
                <dependencySets>
                    <dependencySet>
                        <excludes>
                            <exclude>*:*</exclude>
                        </excludes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>

        <moduleSet>
            <includes>
                <include>org.vetcontrol:vetcontrol-client</include>
            </includes>
            <binaries>
                <outputDirectory>lib</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>

    <fileSets>
        <fileSet>
            <directory>../lib/mysql</directory>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <!--<fileSet>
            <directory>vetcontrol-client/src/main/resources</directory>
            <includes>
                <include>
                    logging.properties
                </include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>-->
        
        <fileSet>
            <directory>db/common</directory>
            <outputDirectory>client/sql</outputDirectory>
            <includes>
                <include>*.sql</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>